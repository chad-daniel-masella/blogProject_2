<!DOCTYPE html>
<html>
  <head>
    <title>Home</title>
    <!-- <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet"> -->

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

    <!-- stylsheet(s) -->
    <!-- <link rel='stylesheet' href='/stylesheets/css/index.css'> -->

    <link rel="stylesheet" href="/stylesheets/css/archive.css">

  </head>
  <body>

      
    <!-- navbar -->
    <nav>
        <h1>THE AVENGER</h1>
        <ul>
          <li> <a href="/">Home</a></li>
          <li> <a href="/create">Create</a> </li>
          <li> <a href="/archieve">Archieve</a> </li>
          <!-- <li> <a href="">Contact</a> </li> -->
        </ul>
        <!-- <img src="../public/images/avenger-logo.png" alt=""> -->
        
      </nav>
  
      <!-- sing in or out -->
      <div class="signOrLog">
          <button class="buttonOne"> <a href="/login">login</a> </button>
          <span>or</span>
          <button class="buttonTwo"> <a href="/signUp">sign up</a> </button>
      </div>

      
<!-- content posts -->
    <div class="">
      <div class="">

        <% if(posts){ %>
          <% posts.forEach(function(post){ %>

          <div class="">
            <div class="containerBlog archiveContent">
            
              <div class="title">
                <h3 class=""><%= post.title %></h3>
              </div>

              <div class="">
                  <div class="imageHolder" id="<%= post.id %>"> <img src="<%= posts[posts.length-1].image %>" alt="">  </div>
                  <div class="content"> <%- post.content %></div>
                  
              </div>

              <div class="author"> 
                  <button> <a href="/view/<%= post.id %>">Read Full Article</a> </button>
                  <button> <a href="/edit/<%= post.id%>">Edit Posts</a> </button>
                  <button> <a href="/delete/<%= post.id%>">Delete Posts</a> </button>
                  <q><%= post.author %> </q>
              </div>

            </div>

          </div>

          <%}); %>

        <% } %>
  
      </div>

    </div>

    <footer>

        <img src="/images/footer-image.png" alt="">
        <h1>THE AVENGER &#169;</h1>
    </footer>
    
  </body>
</html>